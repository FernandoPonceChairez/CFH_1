                <a href="#close" title="Close" class="close">X</a>
                <label for="tipoCredito">Categoría de crédito:</label>
                <select id="tipoCredito" name="tipoCredito" required>
                    <option value="" disabled selected>Selecciona razón de crédito</option>
                    <option value="Consumo">Consumo</option>
                    <option value="Comercial">Comercial</option>
                    <option value="Vivienda">Vivienda</option>
                </select>
                <br>

                <label for="subTipoCredito">Crédito:</label>
                <select id="subTipoCredito" name="subTipoCredito" required>
                    <option value="" disabled selected>Selecciona tipo de crédito</option>
                </select>
                <br>

                <!-- Nuevo select para rango de crédito -->
                <label for="rangoCredito">Rango de crédito:</label>
                <select id="rangoCredito" name="rangoCredito" required>
                    <option value="" disabled selected>Selecciona rango de crédito</option>
                </select>
                <br>

                <h2>Estimador de crédito</h2>
                <form id="formularioEstimacion">
                    <label for="cantidadRequerida">Cantidad requerida:</label>
                    <input type="range" id="cantidadRequerida" name="cantidadRequerida" min="1000" max="100000" step="1000" required>
