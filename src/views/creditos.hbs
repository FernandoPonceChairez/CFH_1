// Esta función actualiza los rangos de crédito disponibles en función del subtipo de crédito seleccionado
function actualizarRangosDeCredito(minAmount, maxAmount) {
    // Supongamos que quieres dividir los rangos de la siguiente manera: 
    // 1000 a 9999, 10000 a 49999, 50000 a 99999, 100000 a 5000000
    // Primero, limpia las opciones actuales
    rangoCredito.innerHTML = '<option value="" disabled selected>Selecciona rango de crédito</option>';

    // Aquí definirías tus rangos basados en minAmount y maxAmount
    const rangos = [
        { min: 1000, max: 9999 },
        { min: 10000, max: 49999 },
        { min: 50000, max: 99999 },
        { min: 100000, max: 5000000 }
    ];

    // Filtra los rangos que se ajustan a los límites del crédito seleccionado
    rangos.filter(rango => rango.min >= minAmount && rango.max <= maxAmount).forEach(rango => {
        const option = document.createElement('option');
        option.value = `${rango.min}-${rango.max}`;
        option.textContent = `$${rango.min.toLocaleString()} - $${rango.max.toLocaleString()}`;
        rangoCredito.appendChild(option);
    });
}

